String cron_string = BRANCH_NAME == "master" ? "@daily" : ""

tag = new Date().format("yyyyMMdd", TimeZone.getTimeZone('UTC'))

pipeline {
    agent any
    options {
        disableConcurrentBuilds()
    }
    triggers { cron(cron_string) }
    stages {
        stage('Pull') {
            steps {
                sh 'docker pull linuxserver/ffmpeg:latest'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t kartaltabak/ffmpeg:latest docker'
            }
        }
        stage('Tag') {
            steps {
                sh 'docker tag kartaltabak/ffmpeg:latest kartaltabak/ffmpeg:${tag} '
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --rm kartaltabak/ffmpeg:latest -version'
            }
        }
        stage('Push Tag') {
            steps {
                sh 'docker push kartaltabak/ffmpeg:${tag} '
            }
        }
        stage('Push Latest') {
            steps {
                sh 'docker push kartaltabak/ffmpeg:latest '
            }
        }
    }
}
