pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile.build'
            args '--network jenkins-network'
        }
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('Pull') {
            steps {
                sh 'docker pull linuxserver/ffmpeg:latest'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t kartaltabak/ffmpeg:`date +'%Y%m%d'` docker'
            }
        }
        stage('Versioning') {
            steps {
                script {
                    def now = new Date()
                    tag = now.format("yyyyMMdd", TimeZone.getTimeZone('UTC'))
                }
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --rm kartaltabak/ffmpeg:latest -version'
            }
        }
        stage('Push Tag') {
            steps {
                sh 'docker push kartaltabak/ffmpeg:${tag} '
            }
        }
        stage('Push Latest') {
            steps {
                sh 'docker push kartaltabak/ffmpeg:latest '
            }
        }
    }
}
